{% extends 'base.html.twig' %}

{% block title %}{{ program.title }}{% endblock %}

{% block body %}

<div class="media">
    <div class="media-body">
        <h2>Liste des saisons : </h2>
        {% for episodes in episodes %}
            <div>
                <h2>Saison n°{{ season.number }} - année de sortie : {{ season.year }}</h2>
                <p>{{ season.description }}</p>
            </div>
    </div>
</div>
{% endfor %}
    <div>
        <h4>Retrouvez ici la liste complète de toutes les saisons proposées sur notre site :</h4>
        <a href="{{ path('season_index')}}" class="btn btn-dark mb-lg-2">Voir la liste complète</a>
    </div>
    <div>
     <a href="{{ path('wild_episode', {'episode' : program.id}) }}" class="btn btn-dark">Voir les épisodes</a>
    </div>
    <div>
        <a href="{{ path('wild_index') }}">Retour à la liste des séries</a>
    </div>

{% endblock %}

