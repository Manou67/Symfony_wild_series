{% extends 'base.html.twig' %}

{% block title %}{{ program.title }}{% endblock %}

{% block body %}

<div class="media">
    <div class="media-body">
        <h1 class="mt-0">{{ program.title }}</h1>
        <p>Liste des épisodes : </p>
            {% for episode in episodes %}
                <div>
                    <h2>Episode n°{{ episode.number }} - {{ episode.title }} </h2>
                    <h4>{{ episode.synopsis }}</h4>
                    <a href="{{ path('wild_season', {'id':  program.id }) }}">Voir la liste des saisons</a>
                </div>
            {% endfor %}
    </div>
</div>
    <a href="{{ path('wild_index') }}">
        Retour à l'accueil des séries
    </a>

{% endblock %}

