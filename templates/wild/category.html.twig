
{% extends 'base.html.twig' %}

{% block title %}Three last programs{% endblock %}

{% block body %}
    <div>
        <a href="{{ path('category_add') }}">Ajouter une catégorie</a>
    </div>

    <a href="{{ path('wild_season', {'id' : program.id }) }}" class="btn btn-dark">Voir les saisons</a>


    <h1 class="titreh1">Les trois dernières séries de la catégorie {{ category.name }} : </h1>
    <div class="row">
        {% for program in programs %}
            <div class="col-md-3 card">
                <h2 class="card-title">{{ program.id }} / {{ program.title }} - Catégorie : {{ program.category.name }}</h2>
                <div class="card-body">
                <p class="card-text">{{ program.summary }}</p>
            </div>
            </div>
        {% else %}
            Aucune série trouvée.
        {% endfor %}
    </div>
    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}
