{% extends 'base.html.twig' %}

{% block title %}Séries{% endblock %}

{% block body %}
    <h1>Séries</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ program.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ program.title }}</td>
            </tr>
            <tr>
                <th>Résumé</th>
                <td>{{ program.summary }}</td>
            </tr>
            <tr>
                <th>Affiche</th>
                <td>{{ program.poster }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('program_index') }}">Retour à la liste</a>

    <a href="{{ path('program_edit', {'id': program.id}) }}">Editer</a>

    {{ include('program/_delete_form.html.twig') }}
{% endblock %}
